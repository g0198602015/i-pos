<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <LinearLayout
                android:background="@android:drawable/list_selector_background"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView"
                    android:background="@drawable/incoming_icon"/>
                </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/whoTextView"
            android:layout_gravity="center_horizontal|left"
            android:textSize="12sp"
            android:textColor="#FF222222"  />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal|left"
            android:text=""
            android:textColor="#FF333333"
            android:id="@+id/infoTextView"
            android:textSize="10sp" />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout_Incoming_ImageParent"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <LinearLayout
                android:id="@+id/LinearLayout_Incoming_Booking"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Image_Incoming_Booking"
                android:background="@mipmap/booking"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />
            <Button
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/Button_Incoming_Booking"
                android:text="@string/button_customer_info"
                android:clickable="false"
                android:layout_gravity="center_vertical|right"
                android:background="#00000000"
                android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:background="@android:drawable/list_selector_background"
                android:id="@+id/LinearLayout_Incoming_NewReservation"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Image_Incoming_NewReservation"
                android:background="@mipmap/customersingle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical" />
            <Button
                android:textSize="15dp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/Button_Incoming_NewReservation"
                android:text="@string/button_new_reservation"
                android:layout_gravity="center_vertical|right"
                android:background="#00000000"
                android:clickable="false"
                android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>