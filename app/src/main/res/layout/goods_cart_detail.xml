<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">
    <TextView
        android:id="@+id/goods_record_detail_toolbar_title"
        android:text="Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20dip"
        android:background="#f6eac8"
        android:gravity="center"
        android:textColor="#000000" />
    <ImageView
        android:id="@+id/goods_record_detail_goods_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/goods_detail_service_persion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#FF000000" />
        <TextView
            android:id="@+id/goods_record_detail_service_persion_editText"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <TextView
                android:text="@string/goods_record_detail_single_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:layout_marginLeft="10dp"
                android:textColor="#FF000000"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/goods_record_detail_discount_TextView"
                android:layout_weight="1"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip" />

        <TextView
            android:text="@string/goods_record_detail_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:textColor="#FF000000"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/goods_record_detail_count_TextView"
            android:layout_weight="1"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip" />

        <TextView
            android:text="@string/goods_record_detail_sumprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:textColor="#FF000000"
            android:layout_weight="1" />

        <TextView
                android:id="@+id/goods_record_detail_sumprice_textView"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
            android:layout_weight="1" />
    </LinearLayout>


    <View
        android:layout_height="0.5dip"
        android:background="#686868"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:text="@string/goods_detail_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#FF000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/goods_record_detail_commit_textView"
            android:text="...blabla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#FF000000" />
    </LinearLayout>

</LinearLayout>