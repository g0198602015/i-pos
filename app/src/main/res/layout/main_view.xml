<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/zoom_world2">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderImageButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/order" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shippmentImageButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shipment"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/inventoryImageButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/inventory" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recordImageButton"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/record"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
</LinearLayout>