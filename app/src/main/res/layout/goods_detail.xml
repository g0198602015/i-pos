<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#f6eac8"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/goods_detail_toolbar_title"
                android:text="Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="20dip"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:gravity="left" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:layout_marginTop="5dp">
        <LinearLayout
            android:clipChildren="false"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:id="@+id/goods_detail_goods_icon"
                    android:layout_width="1dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone" />
            </LinearLayout>
            <LinearLayout
                   android:clipChildren="false"
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:layout_marginTop="5dp"
                   android:layout_marginBottom="5dp" >
                   <com.CenterFragment.TabFragment.Goods.GoodsDetailCartImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/goods_detail_cart_imageview"
                        android:background="@drawable/shopping_cart"
                        android:layout_gravity="center_vertical|bottom"
                        android:layout_marginLeft="10dp" />
                    <LinearLayout
                        android:clipChildren="false"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dip"
                            android:textColor="#FF000000"
                            android:id="@+id/goods_detail_goodsCartCount_textivew"
                            android:layout_marginTop="-10dp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="10dip"
                            android:textColor="#FF000000"
                            android:id="@+id/goods_detail_goodssubtotal_textivew" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <TextView
                    android:text="@string/goods_detail_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dip"
                    android:gravity="left"
                    android:textColor="#FF000000" />
                <EditText
                    android:id="@+id/goods_detail_count_editText"
                    android:text="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dip"
                    android:gravity="center_vertical|left"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/goods_detail_price_TextView"
                    android:text="@string/goods_detail_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dip"
                    android:textColor="#FF000000" />

            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/goods_detail_subtotal_TextView"
                    android:text="@string/goods_detail_subtotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20dip"
                    android:textColor="#FF000000"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




    <View
        android:layout_height="0.5dip"
        android:background="#686868"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/goods_detail_shppoing_cart"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/goods_detial_addgoods_textview"
            android:layout_gravity="center_horizontal"
            android:text="加入購物車"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#94201f"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</LinearLayout>