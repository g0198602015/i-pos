<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#f6eac8"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/goods_detail_toolbar_title"
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:textSize="20dip"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" >

            <com.CenterFragment.TabFragment.Goods.GoodsDetailCartImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goods_detail_cart_imageview"
                android:background="@drawable/shopping_cart"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/goods_detail_goods_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/goods_detail_service_persion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#FF000000" />
        <EditText
            android:id="@+id/goods_detail_service_persion_editText"
            android:text="0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <TextView
                android:text="@string/goods_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:layout_marginLeft="10dp"
                android:textColor="#FF000000"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/goods_detail_price_editText"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:layout_weight="1" />


            <TextView
                android:text="@string/goods_detail_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:layout_marginLeft="10dp"
                android:textColor="#FF000000"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/goods_detail_discount_editText"
                android:layout_weight="1"
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dip"
                android:inputType="number"
                android:layout_marginLeft="5dp" />
        </LinearLayout>


    <View
        android:layout_height="0.5dip"
        android:background="#686868"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:text="@string/goods_detail_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#FF000000" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/goods_detail_commit_textView"
            android:text="...blabla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#FF000000" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/goods_detail_shppoing_cart"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/submit_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:text="加入購物車"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dip"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            android:textColor="#94201f"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</LinearLayout>