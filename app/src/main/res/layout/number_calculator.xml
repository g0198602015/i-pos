<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/number_button_size"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="123"
                android:id="@+id/number"
                android:gravity="bottom|right"
                android:textColor="#ffffff"
                android:singleLine="true"
                android:maxLength="10"
                android:textStyle="bold"
                android:phoneNumber="false"
                android:numeric="integer"
                android:textSize="50dp"
                android:linksClickable="true" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                android:layout_width="@dimen/number_button_size"
                android:layout_height="@dimen/number_button_size"
                android:text="7"
                android:id="@+id/number_7"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                android:layout_width="@dimen/number_button_size"
                android:layout_height="@dimen/number_button_size"
                android:text="8"
                android:id="@+id/number_8"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                android:layout_width="@dimen/number_button_size"
                android:layout_height="@dimen/number_button_size"
                android:text="9"
                android:id="@+id/number_9"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <Button
                android:layout_width="@dimen/number_button_size"
                android:layout_height="@dimen/number_button_size"
                android:text="&lt;-"
                android:id="@+id/number_back"
                android:textSize="@dimen/number_button_textSize"
                android:background="#d7842a" />
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="4"
                    android:id="@+id/number_4"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="5"
                    android:id="@+id/number_5"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="6"
                    android:id="@+id/number_6"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="C"
                    android:id="@+id/number_clear"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#d7842a"
                    android:layout_marginTop="1dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="1"
                    android:id="@+id/number_1"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="2"
                    android:id="@+id/number_2"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="3"
                    android:id="@+id/number_3"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="+1"
                    android:id="@+id/number_plus"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#d7842a"
                    android:layout_marginTop="1dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="0"
                    android:id="@+id/number_0"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:background="#c8c8c8"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="1dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <Button
                    android:layout_width="@dimen/number_button_size"
                    android:layout_height="@dimen/number_button_size"
                    android:text="OK"
                    android:id="@+id/number_ok"
                    android:textSize="@dimen/number_button_textSize"
                    android:background="#d7842a"
                    android:layout_marginTop="1dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
