<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cv_item"
    card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:id="@+id/goods_cart_listview_root_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ItemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dip"
            android:contentDescription="Btn_Text"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ItemName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:textSize="15dip"
                android:textColor="#616161"
                android:layout_marginLeft="10dp"
                android:text="Name" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dip"
                        android:textColor="#616161"
                        android:layout_marginLeft="10dp"
                        android:text="@string/goods_cart_listview_price"
                        android:singleLine="false" />

                    <TextView
                        android:id="@+id/goods_cart_listview_price_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dip"
                        android:textColor="#616161"
                        android:layout_marginLeft="10dp"
                        android:text="123"
                        android:singleLine="false" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="2">
                    <TextView
                        android:id="@+id/goods_cart_listview_minus_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip"
                        android:textColor="@color/red"
                        android:layout_marginLeft="10dp"
                        android:text="-"
                        android:singleLine="false"
                        android:layout_gravity="right" />

                    <TextView
                        android:id="@+id/goods_cart_listview_count_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:text="1"
                        android:singleLine="false" />

                    <TextView
                        android:id="@+id/goods_cart_listview_plus_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dip"
                        android:textColor="@color/red"
                        android:layout_marginLeft="10dp"
                        android:text="+"
                        android:singleLine="false"
                        android:layout_gravity="right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:textSize="17dip"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:text="@string/goods_cart_listview_subtotal"
                        android:singleLine="false" />
                    <TextView
                        android:id="@+id/goods_cart_listview_subtotal_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:textSize="17dip"
                        android:textColor="#000000"
                        android:layout_marginLeft="10dp"
                        android:text="456"
                        android:singleLine="false" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <!--
        <Button android:id="@+id/ItemButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="Btn_Text" />
        -->
    </LinearLayout>
</android.support.v7.widget.CardView>